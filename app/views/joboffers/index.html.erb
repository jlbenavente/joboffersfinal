<p id="notice"><%= notice %></p>

<h1>Joboffers</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image</th>
      <th>Budget</th>
      <th>Region</th>
      <th>Commune</th>
      <th>City</th>
      <th>User</th>
      <th>Skill</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @joboffers.each do |joboffer| %>
      <tr>
        <td><%= joboffer.title %></td>
        <td><%= joboffer.description %></td>
        <td> <%= image_tag(joboffer.image1) if joboffer.image1.attached? %></td>

        <td><%= joboffer.budget %></td>
        <td><%= joboffer.region.name %></td>
        <td><%= joboffer.commune.name %></td>
        <td><%= joboffer.city.name %></td>
        <td><%= joboffer.user.name %></td>
        <td><%= joboffer.skill.name %></td>
        <td><%= link_to 'Show', joboffer %></td>
        <td><%= link_to 'Edit', edit_joboffer_path(joboffer) %></td>
        <td><%= link_to 'Destroy', joboffer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Joboffer', new_joboffer_path %>
